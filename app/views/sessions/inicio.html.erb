<!-- app/views/inicio/index.html.erb -->
<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-5 text-center" style="max-width: 600px; width: 100%;">
    <div class="card-body">
      <h1 class="card-title text-primary mb-4">
        <i class="bi bi-emoji-smile"></i> ¡Bienvenido a AppointmentByRails!
      </h1>
      
      <p class="card-text fs-5 mb-4">Has iniciado sesión correctamente.</p>

      <!-- Botones de navegación principales -->
      <div class="d-grid gap-3 mb-4">
        <a href="<%= employees_path %>" class="btn btn-outline-primary btn-lg fw-bold">
          <i class="bi bi-people"></i> Gestión de Empleados
        </a>
        <a href="<%= services_path %>" class="btn btn-outline-success btn-lg fw-bold">
          <i class="bi bi-wrench"></i> Servicios
        </a>
        <a href="<%= products_path %>" class="btn btn-outline-warning btn-lg fw-bold">
          <i class="bi bi-box"></i> Productos
        </a>
        <a href="<%= appointments_path %>" class="btn btn-outline-info btn-lg fw-bold">
          <i class="bi bi-calendar"></i> Citas
        </a>
      </div>

      <!-- Botón de cierre de sesión -->
      <form action="<%= logout_path %>" method="POST" class="d-inline">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button type="submit" class="btn btn-danger btn-lg fw-bold">
          <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Estilos de iconos y script de Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
