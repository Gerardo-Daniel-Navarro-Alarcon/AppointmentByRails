<!-- app/views/inicio/index.html.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inicio | AppointmentByRails</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body class="bg-light">

  <!-- Encabezado de navegación -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="#">AppointmentByRails</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <%= link_to "Inicio", inicio_path, class: "nav-link active fw-semibold" %>
          </li>
          <li class="nav-item">
            <%= link_to "Empleados", employees_path, class: "nav-link text-white fw-semibold" %>
          </li>
          <li class="nav-item">
            <%= link_to "Productos", products_path, class: "nav-link text-white fw-semibold" %>
          </li>
          <li class="nav-item">
            <%= link_to "Citas", appointments_path, class: "nav-link text-white fw-semibold" %>
          </li>
          <li class="nav-item">
            <%= link_to "Servicios", services_path, class: "nav-link text-white fw-semibold" %>
          </li>
          <li class="nav-item">
            <%= link_to "Cerrar Sesión", logout_path, method: :delete, class: "nav-link text-white fw-semibold" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenido de la página de inicio -->
  <section class="container mt-5">
    <h1 class="text-primary fw-bold mb-4 text-center"><i class="bi bi-house-door-fill"></i> Bienvenido a AppointmentByRails</h1>
    <p class="lead text-center mb-5">Selecciona una sección para comenzar a gestionar tu negocio:</p>

    <div class="row text-center">
      <div class="col-md-3 mb-4">
        <div class="card shadow-sm h-100 border-0">
          <div class="card-body">
            <i class="bi bi-people-fill fs-1 text-primary"></i>
            <h5 class="card-title mt-3">Empleados</h5>
            <p class="card-text">Administra y visualiza a los empleados de tu empresa.</p>
            <%= link_to "Ir a Empleados", employees_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-4">
        <div class="card shadow-sm h-100 border-0">
          <div class="card-body">
            <i class="bi bi-box-seam fs-1 text-success"></i>
            <h5 class="card-title mt-3">Productos</h5>
            <p class="card-text">Gestiona el inventario de productos.</p>
            <%= link_to "Ir a Productos", products_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-4">
        <div class="card shadow-sm h-100 border-0">
          <div class="card-body">
            <i class="bi bi-calendar-check-fill fs-1 text-info"></i>
            <h5 class="card-title mt-3">Citas</h5>
            <p class="card-text">Organiza y visualiza las citas de los clientes.</p>
            <%= link_to "Ir a Citas", appointments_path, class: "btn btn-info" %>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-4">
        <div class="card shadow-sm h-100 border-0">
          <div class="card-body">
            <i class="bi bi-gear-fill fs-1 text-warning"></i>
            <h5 class="card-title mt-3">Servicios</h5>
            <p class="card-text">Consulta y administra los servicios disponibles.</p>
            <%= link_to "Ir a Servicios", services_path, class: "btn btn-warning" %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pie de página -->
  <footer class="bg-dark text-white text-center py-3 mt-5">
    <div class="container">
      <p>&copy; 2024 AppointmentByRails. Todos los derechos reservados.</p>
      <p>
        <a href="#" class="text-white text-decoration-none">Términos de Servicio</a> |
        <a href="#" class="text-white text-decoration-none">Política de Privacidad</a>
      </p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
